{% extends 'base' %}

{% block content %}
    <h1>Elvégzendő feladatok</h1>

    <table class="table table-striped">
       
            <tr>
                <th>#</th>
                <th>név</th>
                <th>leírás</th>
                <th>szint (1-5)</th>
                <th></th>
            </tr>
            
            {% for task in tasks %}
                {% if task.show == 1 %}
                <tr>
                    <td></td>
                    <td>{{task.name}}</td>
                    <td>{% if currentUser %}{{task.text}}{% else %}[jelentkezz be]{% endif %}
                    </td>
                    <td>{{task.level}}</td>
                    <td>
                        {% if currentUser %}
                        <a href="/do/{{task.id}}">elvégeztem</a>
                        
                        <!--
                        <form action="/" method="post">
                            {{ csrfField }}
                            <input type="hidden" name="action" value="make" />
                            <input type="hidden" name="id" value="{{task.id}}" />
                        <button type="submit" class="btn btn-default">A feladatot elvégeztem</button>
                        {% endif %}

                        {% if isGodfather == 1 %}
                            <form action="/" method="post">
                                {{ csrfField }}
                                <input type="hidden" name="action" value="del" />
                                <input type="hidden" name="id" value="{{task.id}}" />
                                <button type="submit" class="btn btn-danger">Törlés</button>
                            </form>
                        {% endif %}-->
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
    </table>

{% endblock %}