{% extends 'base' %}

{% block content %}
    <h1>Elvégzendő feladatok</h1>

    <table class="table table-striped">
       
            <tr>
                <th>#</th>
                <th>név</th>
                <th>leírás</th>
                <th>szint (1-5)</th>
                <th></th>
            </tr>
            

            <tr>
                <td></td>
                <td>{{todo.title}}</td>
                <td>{% if Currentuser %}{{todo.text}}{% else %}...{% endif %}
                </td>
                <td>{{todo.level}}</td>
                <td>
                    {% if Currentuser %}
                    <form action="/" method="post"><input type="hidden" name="id" value="{{todo.id}}" /><button type="submit" class="btn btn-default">A feladatot elvégeztem</button>
                    {% endif %}
                </td>
            </tr>
    </table>

{% endblock %}