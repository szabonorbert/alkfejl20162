{% extends 'base' %}

{% block content %}

<h1>Bejelentkezés</h1>

<form method="post" action="/login">
    <div class="form-group">
        <label for="mail">E-mail:</label>
        <input required="required" type="mail" class="form-control" id="mail" placeholder="E-mail" />
    </div>
    <div class="form-group">
        <label for="pwd">Jelszó:</label>
        <input required="required" type="password" class="form-control" id="pwd" placeholder="Jelszó" />
    </div>
    <button type="submit" class="btn btn-default">Bejelentkezés</button>
</form>

{% endblock %}